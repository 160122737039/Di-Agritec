<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Related Products</title>
    <link rel="stylesheet" href="/SecondHome.css">
    <script src="/SecondHome.js" defer></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo-and-toggle">
            <div class="logo">
                <a href="/" class="home-icon" title="Home">
                    <img src="http://dirisinapuagritec.com/agrihome/wp-content/uploads/2021/08/logo.jpg"
                        alt="Company Logo">
                </a>
                <div class="company-name">
                    Dirisinapu Agritec Solutions<br>| OPC Private Ltd
                </div>
            </div>
            <button class="menu-toggle">&#9776;</button> <!-- Hamburger menu icon -->
        </div>

        <input type="text" placeholder="Search..." class="search-bar mobile-search">

        <div class="nav-options">
            <button class="filter-btn">Filter</button>
            <button class="track-btn">üìç Track</button>
            <button class="cart-btn1">
                üõí Cart <span id="cart-count" class="cart-counter" style="display: none;">0</span>
            </button>
            <button class="phone-btn">üìû Contact</button>
            <button class="notify-btn">üîî Notifications</button>
        </div>
    </nav>


    <!-- Main Layout -->
    <div class="container">
        <!-- Sidebar Section -->
        <!-- Toggle Button (Only visible on mobile) -->
        <div class="mobile-sidebar-toggle" onclick="toggleSidebar()">&#94;</div>

        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <h3>All Products</h3>
            <ul>
                {{#each allProducts}}
                <li><a href="/related/{{this._id}}">{{this.name}}</a></li>
                {{/each}}
            </ul>
        </aside>


        <!-- Content Section -->
        <main class="content">
            <!-- Welcome Section (Full Screen) -->
            <div class="welcome-section">
                <div class="product-image">
                    <img src="{{selectedProduct.imageUrl}}" alt="{{selectedProduct.name}}">
                    <div class="product-description">
                        <h1>{{selectedProduct.name}}</h1>
                        <p>{{selectedProduct.Description}}</p>
                    </div>
                </div>
            </div>

            <!-- Related Products Section -->
            <section class="related-products">
                <h2>üåø Products Offered üåø</h2>
                <div class="product-grid">
                    {{#each relatedProducts}}
                    <div class="product">
                        <a href="/buyProducts/{{this._id}}">
                            <img src="{{this.imageUrl}}" alt="{{this.name}}">
                            <p>{{this.name}}</p>
                        </a>
                    </div>
                    {{/each}}
                </div>
            </section>
        </main>
    </div>
</body>

</html>