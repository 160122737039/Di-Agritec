<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="/cart.css">
    <script src="/cart.js" defer></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo-and-toggle">
            <div class="logo">
                <a href="/" class="home-icon" title="Home">
                    <img src="http://dirisinapuagritec.com/agrihome/wp-content/uploads/2021/08/logo.jpg"
                        alt="Company Logo">
                </a>
                <div class="company-name">
                    Dirisinapu Agritec Solutions<br>| OPC Private Ltd
                </div>
            </div>
            <button class="menu-toggle">&#9776;</button> <!-- Hamburger menu icon -->
        </div>

        <input type="text" placeholder="Search..." class="search-bar mobile-search">

        <div class="nav-options">
            <button class="filter-btn">Filter</button>
            <button class="track-btn">📍 Track</button>
            <button class="cart-btn1">
                🛒 Cart <span id="cart-count" class="cart-counter" style="display: none;">0</span>
            </button>
            <button class="phone-btn">📞 Contact</button>
            <button class="notify-btn">🔔 Notifications</button>
        </div>
    </nav>


    <!-- Cart Page -->
    <div class="cart-container">
        <h2>🛒 Your Shopping Cart</h2>

        <div id="cart-items">
            {{#if cartItems.length}}
            {{#each cartItems}}
            <div class="cart-item" data-id="{{this._id}}">
                <img src="{{this.imageUrl}}" alt="{{this.name}}">
                <div class="item-info">
                    <h3>{{this.name}}</h3>
                    <p>Rs. <span class="item-price">{{this.price}}</span></p>
                    <div class="quantity-controls">
                        <button class="decrease">➖</button>
                        <span class="quantity">{{this.quantity}}</span>
                        <button class="increase">➕</button>
                    </div>
                    <button class="remove-btn" title="Are you Sure you want to delete this Cart">🗑️ Remove</button>
                </div>
            </div>
            {{/each}}
            {{else}}
            <p class="empty-cart">Your cart is empty! 🛍️</p>
            {{/if}}
        </div>

        <!-- Cart Summary -->
        <div class="cart-summary">
            <p>Total: Rs. <span id="total-price">{{totalPrice}}</span></p>
            <button class="pay-btn" onclick="initiateUPIPayment()">💳 Pay Now</button>
        </div>

        <div class="cart-actions">
            <button class="update-details">📞 Update Phone & Address</button>
            <button class="clear-details">🚫 Remove Details</button>
        </div>
    </div>
    <!-- Payment Popup Modal -->
    <div class="payment-modal" id="paymentModal">
        <div class="payment-content">
            <span class="close-btn" onclick="closePaymentModal()">×</span>
            <h3>Select Payment Method</h3>
            <div class="payment-options">
                <div class="payment-method">
                    <img src="https://img.icons8.com/color/48/000000/google-pay.png" alt="UPI">
                    <span>UPI</span>
                </div>
                <div class="payment-method">
                    <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" alt="Credit Card">
                    <span>Credit Card</span>
                </div>
                <div class="payment-method">
                    <img src="https://img.icons8.com/color/48/000000/visa.png" alt="Debit Card">
                    <span>Debit Card</span>
                </div>
                <div class="payment-method">
                    <img src="https://cdn-icons-png.flaticon.com/512/435/435479.png" alt="Net Banking">
                    <span>Net Banking</span>
                </div>
            </div>
        </div>
    </div>


</body>

</html>